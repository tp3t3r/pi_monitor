{
  "web": {
    "title": "RPi monitoring",
    "port": 9000,
    "resource_dir": "/usr/share/pi_monitor",
    "listen": "0.0.0.0",
    "max_points": 100
  },
  "monitoring": {
    "interval": 60,
    "log_file": "/opt/tmp/collected_data.json",
    "retention_days": 3,
    "enable_profiling": false
  },
  "metrics": {
    "cpu": {
      "enabled": true,
      "graph_limits": [0, 100]
    },
    "temp": {
      "enabled": true,
      "graph_limits": [30, 70]
    },
    "memory": {
      "enabled": true,
      "graph_limits": [0, 100]
    },
    "disk": {
      "enabled": true,
      "paths": ["/"],
      "graph_limits": [0, 100]
    },
    "network": {
      "enabled": true,
      "interfaces": ["eth0"],
      "graph_limits": [0, 60]
    },
    "diskio": {
      "enabled": true,
      "devices": ["sda"],
      "graph_limits": [0, 2000]
    }
  }
}
